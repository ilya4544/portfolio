section.skills(id='skills-section').wow.slideInLeft
  .skills-header
    .section-name Skills in 
    .select-box
      select(id='select-skills')
        each category in locals.skills
          option= category.name
  each category in locals.skills
    .skills-list(id=category.name)
      each skill in category.skills
        .skill
          .skill-title= skill.name
          .skill-value
            - for (var i = 0; i < 10; i++)
                if i < skill.value
                  .bullet.active
                else
                  .bullet
section.experiences(id='experiences-section')
  .section-name Experience
  if locals.experience.length > 0
    #works.wow.slideInLeft
      each work in locals.experience
        - var countProjects = (work.projects) ? work.projects.length : 0
        .work-line.animated.fadeInUp(data-length= countProjects)
          .project-title= work.name
          .project-info.active(id='0-'+work.name)
            .position= work.position
            .date #{work.from} &mdash; #{work.to}
          if work.projects
            each project, index in work.projects
              .project-info(id=(index+1)+'-'+work.name)
                .position= project.name
                .date= project.stack
            .arrow_next
